<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/footprint_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="발자취 보기"
        android:textStyle="bold"
        android:background="@color/colorAccent"/>

    <ScrollView
        android:id="@+id/footprint_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/footprint_dialog"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/dialog_image"
                android:gravity="start"
                android:textColor="@color/colorNavIcon"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_round"
                android:scrollHorizontally="false"
                android:lines="6"
                android:textSize="14sp"
                android:padding="8dp"
                android:scrollbars="vertical"/>

            <TextView
                android:id="@+id/dialog_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/footprint_scroll"
        android:padding="16dp">

        <ImageView
            android:id="@+id/dialog_profilepic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="70dp"
            android:layout_height="74dp" />

        <TextView
            android:id="@+id/dialog_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="sdfasdfasdf"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/dialog_profilepic"/>

        <Button
            android:id="@+id/dialog_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/dialog_profilepic"
            app:layout_constraintTop_toBottomOf="@+id/dialog_nickname"
            app:layout_constraintRight_toLeftOf="@id/dialog_recommend"
            tools:text="댓글(5)"
            android:background="@drawable/edittext_round"/>

        <Button
            android:id="@+id/dialog_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dialog_comment"
            app:layout_constraintTop_toBottomOf="@id/dialog_nickname"
            tools:text="추천(7)"
            android:background="@drawable/edittext_round"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

